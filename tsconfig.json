{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./frontend/src",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "backend/src/**/*",
    "frontend/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
